<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemperatureConverter"
        xmlns:ModelViews="clr-namespace:TemperatureConverter.ModelViews" x:Class="TemperatureConverter.MainWindow"
        mc:Ignorable="d"
        Title="Temperature Converter" Height="320" Width="240"
        ResizeMode="NoResize">
   
   <!--bind ModelView -->
   <Window.DataContext>
      <ModelViews:WindowTempModelView/>
   </Window.DataContext>
   
   <Grid HorizontalAlignment="Center" Width="200">
      <!-- UI properties -->
      <Grid.RowDefinitions>
         <RowDefinition Height="35"/>
         <RowDefinition Height="170" />
         <RowDefinition Height="25" />
         <RowDefinition Height="40"/>
      </Grid.RowDefinitions>
      <!--header-->
      <TextBlock  Grid.Row="0" Margin="0,5,0,0" Text="Policz temperaturę" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20"></TextBlock>
      <StackPanel Grid.Row="1" Orientation="Vertical">
         
         <!-- styles -->
         <StackPanel.Resources>
            <Style TargetType="TextBlock">
               <Setter Property="HorizontalAlignment" Value="Center"></Setter>
               <Setter Property="VerticalAlignment" Value="Center"></Setter>
               <Setter Property="FontSize" Value="15"></Setter>
               <Setter Property="Margin" Value="0,7,0,3"></Setter>
            </Style>
            <Style TargetType="TextBox">
               <Setter Property="HorizontalAlignment" Value="Center"></Setter>
               <Setter Property="VerticalAlignment" Value="Center"></Setter>
               <Setter Property="Width" Value="100"></Setter>
               <Setter Property="TextAlignment" Value="Center"></Setter>
            </Style>
            <Style TargetType="StackPanel">
               <Setter Property="Orientation" Value="Vertical"></Setter>
               <Setter Property="VerticalAlignment" Value="Center"></Setter>
               <Setter Property="HorizontalAlignment" Value="Center"></Setter>
               <Setter Property="Width" Value="150"></Setter>
            </Style>
         </StackPanel.Resources>
         
         <!-- User input zone -->
         <StackPanel>
            <TextBlock Text="Celsius"></TextBlock>
            <TextBox   x:Name="txtBC" Text="{Binding Temperature.Celsius}"></TextBox>
         </StackPanel>
         <StackPanel >
            <TextBlock Text="Fahrenheit" ></TextBlock>
            <TextBox   x:Name="txtBF" Text="{Binding Temperature.Fahrenheit}"></TextBox>
         </StackPanel>
         <StackPanel >
            <TextBlock Text="Kelvin"></TextBlock>
            <TextBox   x:Name="txtBK" Text="{Binding Temperature.Kelvin}"/>
         </StackPanel>
      </StackPanel>
      
      <!--Footer-->
      <Label Grid.Row="2" x:Name="lblMessage" Foreground="Firebrick" Content="msgStatus" FontSize="9" FontStyle="Oblique" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
      <Button Content="Count" Grid.Row="3" Margin="0,5,0,0"></Button>
   </Grid>
</Window>
